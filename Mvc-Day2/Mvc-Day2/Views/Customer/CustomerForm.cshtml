@using Mvc_Day2.ViewModels
@model NewCustomerViewModel
@{
}

<h1>Creat Customer</h1>
@using(Html.BeginForm("Save","Customer")){

    <div class="form-gruop">
    @Html.LabelFor(m=>m.Customer.Name)
    @Html.TextBoxFor(m=>m.Customer.Name,new{@class="form-control"})
    </div>

    <div class="form-gruop">
        @Html.LabelFor(m=>m.Customer.BirthDate)
        @Html.TextBoxFor(m=>m.Customer.BirthDate,new{@class="form-control"})
    </div>

    <div class="check box">
        @Html.CheckBoxFor(m=>m.Customer.IsSubscribedToNewLitter) subscribed To Newletter?
    </div>

    <div class="form-gruop">
        @Html.LabelFor(m=>m.Customer.MembershipType)
        @Html.DropDownListFor(m=>m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),new{@class="form-control"})
    </div>

    <div class="form-gruop">
        @Html.LabelFor(m=>m.Customer.NumberOfWatchedMovies)
        @Html.TextBoxFor(m=>m.Customer.NumberOfWatchedMovies,new{@class="form-control"})
    </div>

    @Html.HiddenFor(m=>m.Customer.Id);
    <button type="submit">Save</button>

}