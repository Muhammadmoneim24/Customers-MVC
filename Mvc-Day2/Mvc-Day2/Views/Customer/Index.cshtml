@model List<Customer>
@using Mvc_Day2.Models
@{
    ViewBag.Title = "Customer";
}
<h1>Customer</h1>
<a asp-action="New" asp-controller="Customer"><button>Creat New</button> </a>
<br />
@foreach(var customer in Model)
{
    @Html.ActionLink(@customer.Name,"Details","Customer",new{id = customer.Id})

    <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.Id"><button>Edit</button></a> <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id"><button>Delete</button></a>
    <br />
}
